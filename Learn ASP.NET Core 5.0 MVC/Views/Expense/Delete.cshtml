@model Learn_ASP.NET_Core_5._0_MVC.Models.Expense

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h4>Expense @Model.Id</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="DeletePost">
            <input asp-for="Id" hidden />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <label asp-for="ExpenseName" class="control-label"></label>
                <input asp-for="ExpenseName" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" disabled />
            </div>
            <div class="form-group">
                <input type="submit" value="Delete Expense" class="btn btn-danger w-75" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

